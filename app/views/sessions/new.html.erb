<h1>Existing User Login</h1>

<%= form_for @user, url: login_path, method: :post do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br><br>

  <%= f.submit "Log In" %><br><br>
  Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %> if you dont have an account
<% end %>
