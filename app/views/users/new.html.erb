<h1>Signup below!</h1>

<%= form_for @user, controller: 'users', action: 'create' do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br><br>

  <%= f.submit %>
<% end %>
